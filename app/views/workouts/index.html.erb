<h1>Listing workouts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Creator</th>
    <th>Status</th>
    <th>Due date</th>
    <th>Snooze count</th>
    <th>Title</th>
    <th>Notes</th>
    <th>User interest rating</th>
    <th>User toughness rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.user_id %></td>
    <td><%= workout.creator_id %></td>
    <td><%= workout.status %></td>
    <td><%= workout.due_date %></td>
    <td><%= workout.snooze_count %></td>
    <td><%= workout.title %></td>
    <td><%= workout.notes %></td>
    <td><%= workout.user_interest_rating %></td>
    <td><%= workout.user_toughness_rating %></td>
    <td><%= link_to 'Show', workout %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

